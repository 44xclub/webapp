# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Admin Configuration (comma-separated list of user IDs)
NEXT_PUBLIC_ADMIN_USER_IDS=

# Cron Secret - used to authenticate reconciliation endpoint
# Set this to a random string and include as x-cron-secret header when calling /api/reconciliation
CRON_SECRET=

# Whop Integration (server-side only â€” never prefix with NEXT_PUBLIC_)
# API key for posting messages to Whop chat (requires chat:message:create permission)
WHOP_API_KEY=
# App client secret for verifying x-whop-user-token JWTs from the Whop iframe
WHOP_CLIENT_SECRET=
# Channel ID for the Elite Community Chat where workout completions are posted
# Retrieve once from Whop dashboard or API, then store here (Option A: manual config)
WHOP_WORKOUT_LOG_CHANNEL_ID=
