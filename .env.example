# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Admin Configuration (comma-separated list of user IDs)
NEXT_PUBLIC_ADMIN_USER_IDS=

# Whop Integration (for iframe embedding)
# Get these from the Whop developer dashboard under your app settings
NEXT_PUBLIC_WHOP_APP_ID=your_whop_app_id
WHOP_API_KEY=your_whop_api_key
# Secret used to derive deterministic passwords for Whop-linked Supabase users
# Generate with: openssl rand -hex 32
WHOP_USER_SECRET=your_whop_user_secret
